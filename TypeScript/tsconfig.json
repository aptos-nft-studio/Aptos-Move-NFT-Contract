      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "./dist",
      "sourceMap": true,
      "target": "es2020",
      "pretty": true
